---
import Stack from "../components/stack.astro";
import About from "../components/about.astro";
import Divider from "../components/divider.astro";
import Projects from "../components/projects.astro";
import Contact from "../components/contact.astro";
import Template from "../layouts/template.astro";
import Linkedin from "./../components/icons/linkedin.astro";
import Github from "./../components/icons/github.astro";
import Experience from "./../components/experience.astro";
import DeveloperIcon from "../../public/assets/images/gradient-profile-image.png";
import { Image } from "astro:assets";
import { Trans } from "astro-i18next/components";
import { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Template>
	<section id="header" class="min-h-screen w-full px-10 md:px-0 md:w-2/3 lg:w-3/4 xl:w-2/3 flex flex-col lg:flex-row gap-4 items-center xl:justify-between">
		<article class="flex fade-in flex-col gap-3 w-full lg:w-[40%] py-20 lg:py-0 overflow-hidden">
			<p class="text-gray-400">
				{ t('pages.index.welcome') }
			</p>
	
			<h1 class="text-6xl font-bold overflow-hidden">
				<Trans i18nKey="pages.index.title">
					Soy <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400 overflow-hidden">Xavier Morell</span>, desarrollador <span class="text-yellow-500">fullstack</span>.
				</Trans>
			</h1>
	
			<p class="mt-5 text-gray-400">
				{ t('pages.index.subtitle') }
			</p>

			<section class="mt-3 flex gap-4"> 
				<Linkedin />
				<Github />
			</section>

		</article>

		<Image 
			draggable="false"
			class="w-full lg:w-1/2 p-10"
			style={{
				// @ Set bottom image with mask as transparent
				maskImage: "linear-gradient(to top, rgba(0,0,0,0) 15%, rgba(0,0,0,1) 50%)"
			}}
			loading="eager"
			src={ DeveloperIcon }
			alt="Developer icon"
		/>
	</section>

	<section id="counter" class="w-full mb-40 px-10 md:px-0 md:w-2/3 lg:w-3/4 xl:w-2/3 flex flex-col lg:flex-row justify-center mt-32 lg:mt-0 divide-x-0 lg:divide-x-2 gap-7 lg:gap-0">
		<Divider index="+4" content={ t('components.divider.years_of_experience') } />
		<Divider index="+40" content={ t('components.divider.projects_completed') } />
		<Divider index="+10" content={ t('components.divider.technologies') } />
	</section>

	<About /> 

	<Experience />

	<Projects />

	<Stack />

	<Contact />
</Template>